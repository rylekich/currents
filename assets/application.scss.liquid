$text-font: 'RoutedGothic', Arial, Helvetica, sans-serif;
$button-text: 'RoutedGothicWide', Arial, Helvetica, sans-serif;

$currents-dark-color: #237DB0;
$currents-light-color: #DDEFF9;

$three-hole-color: #D39213;
$bella-color: #8D92AB;
$udp-color: #FF9A9A;
$thick-color: #136E59;
$wendys-color: #9E9DE2;
$future-color: #FC7A01;
$litmus-color: #841479;

$white: #FFFFFF;
$black: #000000;

$standard-border: 2px solid $black;

$line-global: 23px;
$gutter-global: $line-global + 5px;
$offset-global: $line-global*2; // 50px;
$header-height: $offset-global;

$type-headline-lg: 34px;
$type-headline-med: 22px;
$type-body: 16px;

$type-bold: 700;
$type-book: 400;

/*Mixin*/

@mixin flex-space-between{
display: flex;
flex-direction: row;
align-items: baseline;
justify-content: space-between;
} 

@mixin flex-hor-vendor{
display: flex;
align-items: baseline;
  overscroll-behavior: none;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}

@mixin reset-input {
	appearance: none;
-webkit-appearance: none;
-moz-appearance: none;
-ms-appearance: none;
cursor: pointer;
background: transparent;
border: none;
border-radius: 0;
width: auto;
margin: 0;
padding: 0;
line-height: normal;
-webkit-font-smoothing: inherit;
-moz-osx-font-smoothing: inherit;
text-align: left;
}

/*Base*/

*{
	margin: 0;
	padding: 0;
	box-sizing: border-box;
}

html,
body {
	margin: 0;
	padding: 0;
	color: $black;
	line-height: $line-global;
}

body {
	font-size: $type-body;
	background-color: $white;
	font-family: $text-font;
	margin: $gutter-global;
	height: 100%;
}

#productSelect{
	display: none;
}

em {
	font-family: 'RoutedGothicItal';
}

a {
	text-decoration: none;
	color: $black;
	transition: color .3s ease-out;
}

a:hover {
	color: $currents-dark-color;
}

h1, h2, h3, h4, h5, h6, p, ul, ol, {
	font-size: $type-body;
	margin: 0;
	padding: 0;
	line-height: $line-global;
	font-weight: 400;
}

ul, ol {
	list-style-type: none;
}

h1 {

}

h2 {
	font-size: $type-headline-med;
	line-height: $line-global + 15px;
}

h3 {
	font-size: $type-headline-lg;
	line-height: $line-global * 1.75;
}

hr {
	border-top: $standard-border;
}

p {
	margin-top: 10px;
}

::selection {
	background-color: $currents-light-color;
}

/* width */
::-webkit-scrollbar {
  width: 10px;
  height: 10px;
}

/* Track */
::-webkit-scrollbar-track {
	background-color: $white;
}
 
/* Handle */
::-webkit-scrollbar-thumb {
  background: $currents-light-color; 
  border-radius: 10px;
}


/*Utility Classes*/
.wrapper {
	padding-left: $offset-global;
	padding-right: $offset-global;
}

.grid {
	display: grid;
	grid-column-gap: $gutter-global;
	grid-row-gap: $gutter-global;

	> * {
		min-width: 0;
		min-height: 0;
	}
}

.two-columns{
grid-template-columns: 1fr 1fr;
}


/*Header + Footer*/
.header-global {
	width: 100%;
	@include flex-space-between;
	border-bottom: $standard-border;
	margin-bottom: $gutter-global;
	padding: 0 $line-global $line-global;
}

.cart-close{
	display: none;
}

.text-link {
	padding-right: $line-global;
}

.cart-link {
	border: $standard-border;
	border-radius: 10%;
	padding: 5px;
}

.cart-filled {
	background-color: $currents-light-color;
}

footer a:hover,
header a:hover {
	color: $currents-dark-color;
}

/*Footer Solo*/
.footer-global {
	border-top: $standard-border;
	width: 100%;
	@include flex-space-between;
	margin-top: $gutter-global;
	padding: $line-global;
	position: sticky;
	bottom: 0;
	background-color: $white;
}

/*Index*/

#three-hole-current {
	border-top: none;
	margin-top: 0;
}

#three-hole-current > div.publisher-name {
	padding: 0 0 0 $line-global;
}

section.publisher {
border-top: $standard-border;
margin-top: $gutter-global;
}

div.publisher-name {
	padding: $gutter-global 0 0 $line-global;
	cursor: pointer;
}

div.publisher-name h1::before{
	content: url('{{ 'arrow-closed.svg' | asset_url }}' + '&nbsp;');
	padding-right: 10px;
}

div.publisher-name.open h1::before{
	content: url('{{ 'arrow-open.svg' | asset_url }}' + '&nbsp;');
	padding-right: 10px;
}

div.publisher-collection {
	padding: $gutter-global/2 $line-global 0 $line-global;
	// @include flex-hor-vendor;
	}


// body::-webkit-scrollbar,
// div.publisher-collection::-webkit-scrollbar {
//      display: none;
//   }

div.product-card {
	display: flex;
	flex-wrap: wrap;
	flex-direction: column;
	padding-right: $gutter-global;
	max-width: min-content;
}

div.card-info {
	order: 1;
}

div.card-img img{
	height: 300px;
	width: 215px;
	object-fit: contain;
	object-position: left bottom;

}

 /*Index Publisher names*/
 #three-hole-current .publisher-name > h1 {
	color: $three-hole-color;
}

#belladonna-current .publisher-name > h1 {
	color: $bella-color;
}

#futurepoem-current .publisher-name > h1 {
	color: $future-color;
}

#thick-current .publisher-name > h1 {
	color: $thick-color;
}

#litmus-current .publisher-name > h1 {
	color: $litmus-color;
}

#wendys-current .publisher-name > h1 {
	color: $wendys-color;
}

#udp-current .publisher-name > h1 {
	color: $udp-color;
}

/*Product*/

#page-product {
	padding: 0 $line-global;
}

.product-info {
	// margin-top: $gutter-global;
}
.product-images {
	// @include flex-hor-vendor;
	// margin: $gutter-global 0 $gutter-global 0;
	padding: 0 0 $gutter-global 0;
}

.product-images img{
	padding-right: 30px;
	height: 350px;
	width: 300px;
	object-fit: contain;
	object-position: left top;
}

.button {
border: $standard-border;
	border-radius: 15px;
	padding: 5px 15px;
	font-family: 'RoutedGothicWide';
	font-size: $type-headline-med;
	line-height: $type-headline-med;
	height: $offset-global + 10px;
	cursor: pointer;
}

#add-to-box-form {
	margin-top: $gutter-global;
}

#add-to-box-button, 
#checkout-button, {
background-color: $black;
color: $white;
}

#update-button{
	background-color: $white;
	color: $currents-dark-color;
}

#add-to-box-button:hover,
#checkout-button:hover,
#update-button:hover {
	background-color: $currents-light-color;
	color: $black;
}

input#Quantity {
	@include reset-input;
	font-size: $type-headline-med;
	line-height: $type-headline-med;
	font-family: 'RoutedGothicNarrow';
	border: $standard-border;
	border-radius: 15px;
	height: $offset-global + 10px;
	max-width: $offset-global *2;
	padding: 0 0 0 15px;
	text-align: center;
	vertical-align: top;
}

#shopify-section-product-recommendations {
	margin: $gutter-global 0 0 0;

}

#shopify-section-product-recommendations ul {
	@include flex-hor-vendor;
	padding: 0 0 $line-global 0;
}

.product__img {
	width: 250px;
}

li.product {
	max-width: 250px;
	margin: 0 $line-global 0 0;
}

/*Cart aka BOX*/

.box-qty {
	@include reset-input;
	max-width: 60px;
	font-family: 'RoutedGothic';
	font-size: $type-body;
}

#page-box{
	padding: 0 $line-global;
}

.box-title {
	margin: $gutter-global/2 0 $gutter-global 0;
}

#box{
	width: 100%;
	border-collapse: collapse;

	thead{
		text-align: left;
		line-height: $line-global;
	}
}

a#remove-line img {
	vertical-align: sub;
}

#box-submit,
#box-subtotal {
	margin-top: $gutter-global;
}

.box-line {
	height: $offset-global + 10px;
	border-bottom: $standard-border;
}

// Info page
#page-info {
	display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-gap: $gutter-global;
    padding: 0 $line-global;
}

a.threehole {
	color: $three-hole-color;
}

a.bella {
	color: $bella-color;
}

a.futurepoem {
	color: $future-color;
}

a.litmus {
	color: $litmus-color;
}

a.thick {
	color: $thick-color;
}

a.udp {
	color: $udp-color;
}

a.ws {
	color: $wendys-color;
}

a.currents {
	color: $currents-dark-color;
}


// Catalog

#page-catalog{
	margin: 0 $line-global;
}

div.catalog-container {
	display: grid;
    grid-template-columns: repeat(auto-fit, minmax(235px, 1fr));
    grid-gap: $gutter-global;
    align-items: baseline;
}

div.catalog-container div.product-card {
	padding-right: 0;
	max-width: 250px;
}

// filters on catalog page
.clearfix:before, .clearfix:after { content: ""; display: table; }
  .clearfix:after { clear: both; }
  .clearfix { zoom: 1; }
  /* Subnavigation styles */
  .subnav { clear: both; list-style-type: none; margin: 35px 0; padding: 0; }
  .subnav li { display: block; float: left; }
  .subnav li a {
    display: block;
    height: 28px;
    line-height: 28px;
    padding: 0 7px;
    -webkit-border-radius: 7px;
    -moz-border-radius: 7px;
    border-radius: 7px;
    background: $currents-light-color;
    margin: 0 7px 7px 0;
    color: #000;
  }
  .subnav li a:hover, .subnav li.active a {
    background: $currents-dark-color;
    color: #fff;
  }

  @media screen and (max-width: 560px) {

  	// header + footer

	  	.header-global {
		  	padding: 0 0 15px;	
	  	}

  	  		.footer-global {
  			padding: 15px 0;
  		}

  	// index pg
  	#page-index {

  		.flickity-viewport {
  			height: 350px;
  		}

  	}

  	// image on index + catalog
	  	div.card-img img {
		    height: 200px;
		    width: 150px;
		    object-fit: contain;
		    object-position: left bottom;
		}

	// catalog
	#page-catalog {

		div.catalog-container {
		    grid-template-columns: repeat(auto-fit, minmax(145px, 1fr));
		    grid-gap: 15px;
		}

		div.catalog-container div.product-card {
		    max-width: 150px;
		}
	}	


  	// product pg
		#page-product{
			h2 {
			  	font-size: 20px;
			    line-height: 30px;
			    text-align: center;
			}

			.product-images img {
				height: 250px;
			}

	  		.grid {
	  			display: initial;
	  		}

	  		#add-to-box-form {
	        margin: 15px;
		    text-align: center;
			}

			input#Quantity {
				padding: 0;
			}

			#shopify-section-product-recommendations ul {
				padding: 15px 0;
			}
		}

  	// info pg
		#page-info {

			display: inherit;

			h2,
			div:nth-child(n+3) {
				margin-top: 15px;
			}
		}


  	// cart

	  	#box {
	  		
	  		tr th:nth-child(3) {
				text-align: center;
			}
	  		
	  		
			.box-qty {
				text-align: center;
			}


			.box-line {
				height: $offset-global + 25px;
			}
	  		
	  	}

  }
